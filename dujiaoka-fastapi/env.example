# ====================================
# 小申交流站 环境变量配置模板
# ====================================
# 使用方法: 复制此文件为 .env 并根据实际情况修改
# cp env.example .env

# ------------------------------------
# 基础配置
# ------------------------------------
# 项目名称
PROJECT_NAME=小申交流站

# 调试模式（生产环境务必设为 false）
DEBUG=false

# ------------------------------------
# 安全配置（生产环境必须修改！）
# ------------------------------------
# JWT 密钥（必须修改！使用强随机字符串）
# 生成命令: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-super-secret-key-change-this-in-production-must-be-at-least-32-chars

# Token 过期时间（分钟），默认 8 天
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# 卡密加密密钥（32字节 base64 编码）
# 生成命令: python -c "import secrets, base64; print(base64.urlsafe_b64encode(secrets.token_bytes(32)).decode())"
CARD_ENCRYPTION_KEY=your-card-encryption-key-base64-encoded-32-bytes

# ------------------------------------
# 数据库配置
# ------------------------------------
# PostgreSQL 配置（推荐生产环境使用）
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-password-here
POSTGRES_DB=dujiaoka

# 数据库连接 URL（Docker 环境自动生成，本地开发可手动设置）
# SQLite（开发环境）
# DATABASE_URL=sqlite+aiosqlite:///./dujiaoka_fastapi.db
# PostgreSQL（生产环境）
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/dujiaoka

# ------------------------------------
# Redis 配置
# ------------------------------------
REDIS_URL=redis://localhost:6379/0

# ------------------------------------
# CORS 配置
# ------------------------------------
# 允许的前端域名，多个用逗号分隔
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:80","https://yourdomain.com"]

# 允许的主机名
ALLOWED_HOSTS=["localhost","127.0.0.1","yourdomain.com"]

# ------------------------------------
# 端口配置
# ------------------------------------
# 前端端口（Docker 外部映射）
FRONTEND_PORT=80

# 后端端口
BACKEND_PORT=8000

# ------------------------------------
# 文件上传配置
# ------------------------------------
# 上传目录
UPLOAD_DIR=uploads

# 最大上传大小（字节），默认 10MB
MAX_UPLOAD_SIZE=10485760

# ------------------------------------
# 支付配置（可选）
# ------------------------------------
# 支付宝配置
ALIPAY_APP_ID=
ALIPAY_PRIVATE_KEY=
ALIPAY_PUBLIC_KEY=

# 微信支付配置
WECHAT_APP_ID=
WECHAT_MCH_ID=
WECHAT_PRIVATE_KEY=
